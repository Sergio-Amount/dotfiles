#! /usr/bin/env bash

# DESCRIPTION
# Installs the node dev environments

# EXECUTION
printf "Installing Node... \n"

printf "Installing LTS.  If you want another version install manulaly. \n"
_zsh_nvm_install_wrapper --lts
_zsh_nvm_install_wrapper use --lts
_zsh_nvm_install_wrapper alias default node

printf "Installing Yarn. \n"
npm install -g yarn

printf "Installing React Geneartor. \n"
npm install -g create-react-app

printf "Installing Linters. \n"
npm install -g tern js-beautify
npm install -g eslint babel-eslint eslint-plugin-react
npm install -g prettier stylelint stylelint-scss

printf "Creating Symlinks. \n"
stow -v --target=$HOME --dir=$DOTFILE_DIR eslint
stow -v --target=$HOME --dir=$DOTFILE_DIR prettier